@{
    var banks = ViewBag.Banks as List<ASP.NET_MVC_HW1.Models.客戶銀行資訊>;
}

@using (Html.BeginForm("BatchUpdateBank", "Client"))
{
    @Html.AntiForgeryToken()

<div>
    <hr />
    <h4>客戶銀行資訊</h4>
    <table class="table">
        <tr>
            <th>
                銀行名稱
            </th>
            <th>
                銀行代碼
            </th>
            <th>
                分行代碼
            </th>
            <th>
                帳戶名稱
            </th>
            <th>
                帳戶號碼
            </th>
        </tr>
        
        @for (int i = 0; i < banks.Count; i++)
        {
            @Html.HiddenFor(modelItem => banks[i].Id)
            <tr>
                <td>
                    @Html.EditorFor(modelItem => banks[i].銀行名稱)
                </td>
                <td>
                    @Html.EditorFor(modelItem => banks[i].銀行代碼)
                </td>
                <td>
                    @Html.EditorFor(modelItem => banks[i].分行代碼)
                </td>
                <td>
                    @Html.EditorFor(modelItem => banks[i].帳戶名稱)
                </td>
                <td>
                    @Html.EditorFor(modelItem => banks[i].帳戶號碼)
                </td>
            </tr>
        }

    </table>
    <input type="hidden" name="clientId" value="@(Model.Id)" />
    <input type="submit" value="批次更新" />
</div>
}


