@{
    var banks = ViewBag.Banks as List<ASP.NET_MVC_HW1.Models.客戶銀行資訊>;
}

<div>
    <hr />
    <h4>客戶銀行資訊</h4>
    <table class="table">
        <tr>
            <th>
                銀行名稱
            </th>
            <th>
                銀行代碼
            </th>
            <th>
                分行代碼
            </th>
            <th>
                帳戶名稱
            </th>
            <th>
                帳戶號碼
            </th>
            <th></th>
        </tr>

        @foreach (var item in banks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.分行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶號碼)
                </td>
                <td>
                    @using (Html.BeginForm("DeleteBank", "Client"))
                    {
                        @Html.AntiForgeryToken()

                    <input type="hidden" name="clientId" value="@Html.DisplayFor(model => model.Id)" />
                    <input type="hidden" name="bankId" value="@(item.Id)" />
                    <input type="submit" value="Delete" class="btn btn-default" />
                    }
                </td>
            </tr>
        }

    </table>
</div>


@{
    var contacts = ViewBag.Contacts as List<ASP.NET_MVC_HW1.Models.客戶聯絡人>;
}

<div>
    <hr />
    <h4>客戶聯絡人</h4>
    <table class="table">
        <tr>
            <th>
                職稱
            </th>
            <th>
                姓名
            </th>
            <th>
                Email
            </th>
            <th>
                手機
            </th>
            <th>
                電話
            </th>
            <th></th>
        </tr>

        @foreach (var item in contacts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.職稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.姓名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.手機)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.電話)
                </td>
                <td>
                    @using (Html.BeginForm("DeleteContact", "Client"))
                    {
                        @Html.AntiForgeryToken()
                    
                    <input type="hidden" name="clientId" value="@Html.DisplayFor(model => model.Id)" />
                    <input type="hidden" name="contactId" value="@(item.Id)" />
                    <input type="submit" value="Delete" class="btn btn-default" />
                    }
